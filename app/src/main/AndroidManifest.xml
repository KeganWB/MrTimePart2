<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.mrtimepart2">

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />
    <uses-permission android:name="android.permission.WRITE_MEDIA_IMAGES" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MrTimePart2"
        tools:targetApi="31">

        <!-- MainActivity declaration without intent-filter -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.MrTimePart2.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Category"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.MrTimePart2">
            <intent-filter>
                <action android:name="android.intent.action.DEFAULT" />

            </intent-filter>
        </activity>

        <!-- Set HoursActivity as the launcher activity -->
        <activity android:name=".HoursActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.DEFAULT" />

            </intent-filter>
        </activity>


        <activity
            android:name=".TimeSheetActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.MrTimePart2">
            <intent-filter>
                <action android:name="android.intent.action.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AddTimeSheetActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.MrTimePart2">
        <intent-filter>
            <action android:name="android.intent.action.DEFAULT" />
        </intent-filter>
        </activity>

    </application>

</manifest>
